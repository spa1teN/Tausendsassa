# Dockerfile for Tausendsassa Database Browser
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.115.0 \
    uvicorn==0.30.6 \
    asyncpg==0.30.0 \
    python-dotenv==1.0.1

# Copy browser script
COPY db_browser.py .

# Expose port
EXPOSE 8080

# Run the browser
CMD ["uvicorn", "db_browser:app", "--host", "0.0.0.0", "--port", "8080"]
